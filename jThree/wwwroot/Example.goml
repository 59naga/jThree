<goml>
  <resources>
    <sprite diffuse="blue" specular="#CCC" specularpower="15" name="mat1" texture ="rb2"/>
    <sprite diffuse="blue" specular="#CCC" specularpower="15" name="mat2" texture ="test"/>
    <grid hdiv="20" name="grid" vdiv="20" />
    <tri name="triangle" />
    <cylinder name="cube" divide="30" />
    <quad name="quad"/>
  </resources>
  <renderers>
    <renderer clearColor="#324D7C" frame=".canvasContainer">
      <viewport cam="CAM1" />
    </renderer>
  </renderers>
  <scenes>
    <scene>
      <object>
        <components>
          <component id="modTest" name="test"/>
          <component name="test2"/>
        </components>
        <camera aspect="1" far="20" fovy="1/4p" name="CAM1" near="0.1" position="(0,0.5,2)">
          <mesh geo="quad" mat="mat1" position="0,0,-1" scale="0.2" rotation="y(15d)"/>
        </camera>
      </object>
      <mesh geo="grid" mat="mat2"></mesh>
      <mesh id="tri" class="triangle" geo="cube" mat="mat2" scale="0.3">
            <object position="0.5,1,-1" template="tempTest" geometry="grid" rotation="x(20d)">
            </object>
      </mesh>
    </scene>
  </scenes>
  <templates>
    <template name="tempTest" geometry="triangle">
      <mesh class="triangle" geo="{{geometry}}" mat = "mat2" scale="0.5"/>
    </template>
  </templates>
</goml>